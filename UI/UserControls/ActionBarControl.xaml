                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.Value="-1"
                materialDesign:NavigationRailAssist.SelectionCornerRadius="0"
                ToolTip="MaterialDesignFloatingActionMiniSecondaryDarkButton">
                <materialDesign:PackIcon
                    Width="18"
                    Height="18"
                    Kind="DownloadCircleOutline" />
            </Button>-->

            <!--<ToggleButton Style="{StaticResource ToggleButtonFilterStyle}" ToolTip="AAAAA" Width="22" Height="22"
                          Margin="0 2 0 2 ">
                <materialDesign:PackIcon Kind="DownloadCircleOutline" Foreground="Gold" Height="18" Width="18" />
            </ToggleButton>-->
        </StackPanel>
    </Grid>
</UserControl>